print("Hello World, from Chai")

global x
global y

def load() {
	// Called when loading the game.
	x = 300;
	y = 100;

	//filesystem.load("test.chai");

	graphics.setBackgroundColor(245, 199, 50);
}
def joystickpressed(joystick, button)  {
	print("Triggered");
	x = 10
}


def update(delta) {
	var velocity = 0.5
	// Called before drawing.
	if (joystick.isDown(0, "up")) {
		y -= velocity * delta
	}
	if (joystick.isDown(0, "down")) {
		y += velocity * delta
	}
	if (joystick.isDown(0, "left")) {
		x -= velocity * delta
	}
	if (joystick.isDown(0, "right")) {
		x += velocity * delta
	}
}

def draw() {
	graphics.rectangle("fill", x, y, 100, 100)
}
