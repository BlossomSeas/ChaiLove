global beat

def load() {
	beat = love.audio.newSource("assets/unittests/assets/chailove.ogg")
}

def draw() {
	love.graphics.print("Press a joystick button!", 20, 100)
}

def joystickpressed(joystick, button) {
	love.audio.play(beat)
}
