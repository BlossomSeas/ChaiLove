global x;
global y;
global velocity = 0.5;

def load() {
	x = 100;
	y = 100;
}

def update(delta) {
	if (joystick.isDown(0, "up")) {
		y -= velocity * delta;
	}
	if (joystick.isDown(0, "down")) {
		y += velocity * delta;
	}
	if (joystick.isDown(0, "left")) {
		x -= velocity * delta;
	}
	if (joystick.isDown(0, "right")) {
		x += velocity * delta;
	}
}

def draw() {
	graphics.rectangle(x, y, 100, 100, 0, 255, 0, 255);
}
