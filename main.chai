print("Hello World, from Chai")

global x;
global y;

def load() {
	// Called when loading the game.
	x = 10
	y = 100
}

def update(delta) {
	if (isDown("up")) {
		y -= 1 * delta;
	}
	if (isDown("down")) {
		y += 1 * delta;
	}
	if (isDown("left")) {
		x-=1 * delta;
	}
	if (isDown("right")) {
		x+=1 * delta;
	}
}

def draw() {
	// Called to render the game state.
	rectangle(x, y, 100, 20, 255, 0, 255, 255)
}
