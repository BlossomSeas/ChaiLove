global x;
global y;
global velocity = 0.5;

def load() {
	x = 100;
	y = 100;

	graphics.setBackgroundColor(136, 199, 245);
}

def update(delta) {
	if (joystick.isDown(0, "up")) {
		y -= velocity * delta;
	}
	if (joystick.isDown(0, "down")) {
		y += velocity * delta;
	}
	if (joystick.isDown(0, "left")) {
		x -= velocity * delta;
	}
	if (joystick.isDown(0, "right")) {
		x += velocity * delta;
	}
}

def draw() {
	//var r = "line"
	graphics.rectangle("line", x, y, 100, 100);
}
